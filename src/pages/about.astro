<style>
	.page-header {
		background: linear-gradient(135deg, #1e3a8a 0%, #3b82f6 100%);
		color: white;
		padding: 6rem 0 4rem;
		text-align: center;
	}

	.page-header h1 {
		font-size: 3rem;
		font-weight: 700;
		margin-bottom: 1rem;
	}

	.page-header p {
		font-size: 1.25rem;
		opacity: 0.9;
	}

	.about-content {
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: 4rem;
		align-items: center;
	}

	.about-text h2 {
		font-size: 2.5rem;
		font-weight: 700;
		margin-bottom: 2rem;
		color: #1e3a8a;
	}

	.about-text p {
		margin-bottom: 1.5rem;
		color: #4b5563;
		line-height: 1.7;
		font-size: 1.1rem;
	}

	.about-image img {
		width: 100%;
		height: 400px;
		object-fit: cover;
		border-radius: 1rem;
		box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1);
	}

	.mission-section {
		background: #f8fafc;
	}

	.mission-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
		gap: 2rem;
	}

	.mission-card {
		text-align: center;
		border-top: 4px solid #f97316;
	}

	.mission-card h3 {
		font-size: 1.5rem;
		font-weight: 600;
		margin-bottom: 1rem;
		color: #1e3a8a;
	}

	.mission-card p {
		color: #4b5563;
		line-height: 1.6;
	}

	.expertise-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
		gap: 2rem;
		margin-top: 2rem;
	}

	.expertise-item {
		text-align: center;
		padding: 2rem;
	}

	.expertise-icon {
		font-size: 3rem;
		margin-bottom: 1rem;
		display: block;
	}

	.expertise-item h4 {
		font-size: 1.25rem;
		font-weight: 600;
		margin-bottom: 1rem;
		color: #1e3a8a;
	}

	.expertise-item p {
		color: #6b7280;
		line-height: 1.6;
	}

	.team-section {
		background: #f8fafc;
	}

	.why-choose-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
		gap: 2rem;
		margin-top: 2rem;
	}

	.why-choose-grid .card h4 {
		font-size: 1.25rem;
		font-weight: 600;
		margin-bottom: 1rem;
		color: #1e3a8a;
	}

	.why-choose-grid .card p {
		color: #4b5563;
		line-height: 1.6;
	}

	@media (max-width: 768px) {
		.page-header {
			padding: 4rem 0 3rem;
		}

		.page-header h1 {
			font-size: 2.5rem;
		}

		.about-content {
			grid-template-columns: 1fr;
			gap: 2rem;
		}

		.about-text h2 {
			font-size: 2rem;
		}

		.mission-grid,
		.expertise-grid,
		.why-choose-grid {
			grid-template-columns: 1fr;
		}
	}
</style>